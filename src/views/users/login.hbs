        <input type="password" id="password" name="password" placeholder="password" value="{{password}}"><br>
    
        <button class="buttonLogin">log in</button>
    </form>

    <form action="/singup" method="GET">
        <p class="text-info">Si no teienes una cuenta ya creada Registrate!</p>
        <button class="buttonLogin" onclick="myFunction()">Sign up</button>
