<div class="query">
    <form action="/singup" method="POST">
        <input type="text" id="fullName" name="fullName" placeholder="full name" value="{{fullName}}"><br>
        <input type="text" id="userName" name="userName" placeholder="user name" value="{{userName}}"><br>
        <input type="text" id="email" name="email" placeholder="email" value="{{email}}"><br>
        <input type="password" id="password" name="password" placeholder="password" value="{{password}}"><br>

            
        <button class="buttonLogin" type="submit" onclick="myFunction()">Sign up</button>
            
    </form>
    <form action="/" method="GET">
        <p class="text-info">Si ya teienes una cuenta ya creada Entra!</p>
        <button class="buttonLogin" onclick="myFunction()">log in</button>
